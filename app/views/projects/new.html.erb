<h1>Add Projects</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@project) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :platform %>
			<%= f.text_field :platform %>

			<%= f.label :url %>
			<%= f.text_field :url %>

			<%= f.label :image_url %>
			<%= f.text_field :image_url %>

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.submit "Add Project", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>